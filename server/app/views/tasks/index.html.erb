<h1>Listing tasks</h1>

<table>
  <tr>
    <th>Priority</th>
    <th>Command</th>
    <th>Status</th>
    <th>Job</th>
  </tr>

<% @tasks.each do |task| %>
  <tr>
    <td><%=h task.priority %></td>
    <td><%=h task.command %></td>
    <td><%=h task.status %></td>
    <td><%=h task.job %></td>
    <td><%= link_to 'Show', task %></td>
    <td><%= link_to 'Edit', edit_task_path(task) %></td>
    <td><%= link_to 'Destroy', task, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New task', new_task_path %>