<h1>Listing cattles</h1>

<table>
  <tr>
    <th>Hostname</th>
    <th>Memory</th>
    <th>System</th>
    <th>Processor</th>
    <th>Ncpus</th>
    <th>Enabled</th>
  </tr>

<% @cattles.each do |cattle| %>
  <tr>
    <td><%=h cattle.hostname %></td>
    <td><%=h cattle.memory %></td>
    <td><%=h cattle.system %></td>
    <td><%=h cattle.processor %></td>
    <td><%=h cattle.ncpus %></td>
    <td><%=h cattle.enabled %></td>
    <td><%= link_to 'Show', cattle %></td>
    <td><%= link_to 'Edit', edit_cattle_path(cattle) %></td>
    <td><%= link_to 'Destroy', cattle, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

